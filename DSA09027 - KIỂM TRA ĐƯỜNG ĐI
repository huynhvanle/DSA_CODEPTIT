#include <bits/stdc++.h>
using namespace std;
#define MOD 1000000007
#define run() int t; cin >> t; while(t--)
#define fast() ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define all(x) x.begin(), x.end()
#define reset(x) memset(x, 0, sizeof(x))
#define fi first
#define se second
#define ll long long
#define db double
#define fl float

int n, m;
int a[1000][1000], father[1000];
int u, v;

void Try(){
    for(int i = 1; i <= n; i++){
        if(!father[i]){
            queue<int> q;
            father[i] = i;
            q.push(i);
            while(!q.empty()){
                int x = q.front(); q.pop();
                for(int j = 1; j <= n; j++){
                    if(!father[j] && a[x][j]){
                        father[j] = i;
                        q.push(j);
                    }
                }
            }
        }
    }
}

int main() {
    fast();
    run(){
        cin >> n >> m;
        reset(a); reset(father);
        for(int i = 0; i < m; i++){
            int x, y; cin >> x >> y;
            a[x][y] = 1;
            a[y][x] = 1;
        }
        int q; cin >> q;
        Try();
        for(int i = 0; i < q; i++){
            cin >> u >> v;
            if(father[u] != father[v]) cout << "NO" << endl;
            else cout << "YES" << endl;
        }
    }
}
