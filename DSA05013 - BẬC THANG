#include <bits/stdc++.h>
using namespace std;

#define MOD 1000000007
#define run() int t; cin >> t; while(t--)
#define fast() ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define all(x) x.begin(), x.end()
#define reset(x) memset(x, 0, sizeof(x))
#define fi first
#define se second
#define ll long long
#define db double
#define fl float


int main() {
    fast();
    run(){
        int n, k; cin >> n >> k;
        ll dp[n + 1], pre[n + 1];
        pre[0] = 1;
        for(int i = 1; i <= n; i++){
            if(i > k){
                dp[i] = (pre[i - 1] - pre[i - k - 1] + MOD) % MOD;
            }else
                dp[i] = pre[i - 1] % MOD;
            pre[i] = (pre[i - 1] + dp[i]) % MOD;
        }
        cout << dp[n] << endl;
    }
}
